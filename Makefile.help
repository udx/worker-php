# Help content for Makefile targets

HELP_BUILD = "Build the Docker image."
HELP_RUN = "Run the Docker container, optionally with a specified command."
HELP_RUN_IT = "Run the Docker container interactively."
HELP_EXEC = "Exec into the running container."
HELP_LOG = "View the container logs."
HELP_CLEAN = "Stop and delete the running container if it exists."
HELP_TEST = "Run the validation tests after building the Docker image."
HELP_DEV_PIPELINE = "Run the development pipeline: build and test."
HELP_RUN_TEST = "Run the container in test mode with the test script."
HELP_RUN_WITH_VOLUME = "Run the Docker container with port mapping and volume mounting."

# Help target
help:
	@echo ""

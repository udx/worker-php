	@echo ""
	@echo "$(HELP_RUN_WITH_VOLUME)"
	@echo "make run-with-volume"
	@echo ""
	@echo "$(HELP_EXEC)"
	@echo "make exec"
	@echo ""
	@echo "$(HELP_LOG)"
	@echo "make log"
	@echo ""
	@echo "$(HELP_CLEAN)"
	@echo "make clean"
	@echo ""
	@echo "$(HELP_RUN_TEST)"
	@echo "make run-test"
	@echo ""
	@echo "$(HELP_TEST)"
	@echo "make test"
	@echo ""
	@echo "$(HELP_DEV_PIPELINE)"
	@echo "make dev-pipeline"
	@echo ""
	@echo "Variables:"
	@echo "  DOCKER_IMAGE (default: $(DOCKER_IMAGE))"
	@echo "  CONTAINER_NAME (default: $(CONTAINER_NAME))"
